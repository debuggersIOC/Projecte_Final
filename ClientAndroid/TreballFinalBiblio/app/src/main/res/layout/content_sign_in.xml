<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signIn_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50sp"
    android:paddingTop="20sp"
    android:paddingRight="50sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/signup_Title_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="SIGN-UP"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signUp_user_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="UserName"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signUp_UserName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_gray"
        android:minHeight="48dp"
        android:padding="10dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/error_userName_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:text="S'ha produit un error"
        android:textColor="#DF4444"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/signUp_email_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="email"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signUp_email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_gray"
        android:inputType="textNoSuggestions"
        android:minHeight="48dp"
        android:padding="10dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/error_email_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:text="S'ha produit un error"
        android:textColor="#DF4444"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Password"
        android:textAppearance="@style/LabelSmallText"
        android:textSize="15sp"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/signUp_password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_gray"
        android:inputType="text|textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hide_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/error_password_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:text="S'ha produit un error"
        android:textColor="#DF4444"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/signUp_passwordRepeat_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Repeat the password"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signUp_passwordRepeat_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_gray"
        android:inputType="text|textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hide_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/error_repeatPassword_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:text="error"
        android:textColor="#DF4444"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/signUp_dni_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="DNI/NIF/ID"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signUp_id_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_gray"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hide_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/error_id_textView"
        style="@style/LabelMediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:text="S'ha produit un error"
        android:textColor="#DF4444"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/c_clean_blue"
        android:text="Crea Usuari" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/login_link_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:minHeight="48dp"
        android:paddingTop="15dp"
        android:text="Si ja tens un compte clica aquÃ­"
        android:textColor="@color/c_clean_blue" />

</LinearLayout>